{
  "security.workspace.trust.enabled": true,
  // UI
  "workbench.sideBar.location": "right",
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.iconTheme": "catppuccin-mocha",
  // Editor
  "editor.fontFamily": "'Atlassian Mono', 'JetBrains Mono', '0xProto Nerd Font Mono', 'Geist Mono', Menlo, Monaco, 'Courier New', monospace",
  "editor.lineNumbers": "relative",
  "editor.defaultFormatter": "oxc.oxc-vscode",
  "editor.accessibilitySupport": "off",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.removeUnusedImports": "always"
  },
  // Terminal
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.scrollback": 15000,
  // Explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  // Search
  "search.exclude": {
    "**/dist": true,
    "**/target": true
  },
  // vim
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.smartRelativeLine": true,
  // Window
  "window.nativeTabs": true,
  "security.promptForLocalFileProtocolHandling": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "files.associations": {
    "*.css": "tailwindcss",
    "*.prisma": "prisma"
  },
  "workbench.editor.editorActionsLocation": "hidden",
  "security.workspace.trust.untrustedFiles": "open",
  // File types
  "[typescript]": {
    "editor.defaultFormatter": "oxc.oxc-vscode"
  },
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "gitlens.remotes": [
    {
      "regex": "ssh:\\/\\/(git@stash\\.atlassian\\.com):7997\\/(.+?)(?:\\.git)?$",
      "type": "BitbucketServer",
      "protocol": "https",
      "domain": "https://stash.atlassian.com",
      "username": "pdros"
    }
  ],
  // Extensions
  "javascript.updateImportsOnFileMove.enabled": "always",
  "diffEditor.ignoreTrimWhitespace": false,
  "git.openRepositoryInParentFolders": "always",
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "oxc.typeAware": true,
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  }
}